{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "allowJs": false
    },
    "include": [
        "./@types/**/*.d.ts",
        "./src/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
